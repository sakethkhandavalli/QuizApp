
<p id="notice"><%= notice %></p>

<h1 style="text-align:center"> Genres </h1><br/>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %>
        <td><%= genre.description %></td>
        <td><%= link_to('Show', {:controller => 'subgenres', :action => 'index' , :genre => genre.id , :genre_name => genre.name}) %></td>&emsp;
        <% if $current_user.Admin? %>
          <td><%= link_to 'Edit', edit_genre_path(genre) %></td>&emsp;
        <% end %>
        <% if $current_user.Admin? %>
          <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>&emsp;
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if $current_user.Admin? %>
  <h4 style="text-align:center"><%= link_to 'New Genre', new_genre_path %></h4>
<% end %>
